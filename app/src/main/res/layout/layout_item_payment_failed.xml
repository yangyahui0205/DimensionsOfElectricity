<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50666666">

    <ImageView
        android:id="@+id/iv_payment_failed"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_152"
        android:src="@mipmap/payment_failed" />

    <TextView
        android:id="@+id/tv_payment_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_payment_failed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_30"
        android:text="支付失败"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_payment_failed_content"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_payment_failed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="暂未开通微信与支付宝支付 请选择余额支付"
        android:textColor="#fff"
        android:textSize="@dimen/sp_14" />

    <Button
        android:id="@+id/btn_payment_failed_continue_to_pay"
        android:layout_width="@dimen/dp_108"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/tv_payment_failed_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#ff5e70"
        android:text="继续支付"
        android:textColor="#fff"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>
