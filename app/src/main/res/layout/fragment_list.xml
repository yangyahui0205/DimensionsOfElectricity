<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_102"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@drawable/list_background"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_20"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20">

        <RadioButton
            android:id="@+id/rb_all_orders"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/common_icon_all_list"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="全部订单"
            android:textColor="#666666"
            android:textSize="@dimen/dp_12" />

        <RadioButton
            android:id="@+id/rb_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/common_icon_pay"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="代付款"
            android:textColor="#666666"
            android:textSize="@dimen/dp_12" />

        <RadioButton
            android:id="@+id/rb_wait_for_receiving"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/common_icon_receive"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="待收货"
            android:textColor="#666666"
            android:textSize="@dimen/dp_12" />

        <RadioButton
            android:id="@+id/rb_to_evaluate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/commom_icon_comment"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="待评价"
            android:textColor="#666666"
            android:textSize="@dimen/dp_12" />

        <RadioButton
            android:id="@+id/rb_off_the_stocks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@mipmap/common_icon_finish"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="已完成"
            android:textColor="#666666"
            android:textSize="@dimen/dp_12" />
    </RadioGroup>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_orderList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_24" />
    </android.support.v7.widget.CardView>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_60" />

</LinearLayout>
