<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_background"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_my_footprint_pic"
        android:layout_width="@dimen/dp_81"
        android:layout_height="@dimen/dp_81"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_my_footprint_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="jsklfjslkfjslkfjslkjfskldfjsdlkfjksdllsfsdfs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_my_footprint_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="￥0.00"
            android:textColor="#ff1616"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_my_footprint_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已浏览5次"
            android:textColor="#666666"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_my_footprint_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_10"
        android:text="2018-09-03 10:90" />
</LinearLayout>
