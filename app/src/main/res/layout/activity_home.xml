<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.HomeActivity">

    <FrameLayout
        android:id="@+id/fl_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RadioGroup
        android:id="@+id/rg_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_81"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/my_bottom_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_32"
            android:background="@drawable/commom_tab_btn_home"
            android:button="@null"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rb_circle"
            android:layout_width="@dimen/dp_34"
            android:layout_height="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_29"
            android:background="@drawable/commom_tab_btn_circle"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_shoppingcart"
            android:layout_width="@dimen/dp_55"
            android:layout_height="@dimen/dp_55"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_36"
            android:background="@drawable/commom_tab_btn_shoppingcart"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_list"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_36"
            android:background="@drawable/commom_tab_btn_list"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_my"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_32"
            android:background="@drawable/commom_tab_btn_my"
            android:button="@null" />
    </RadioGroup>
</RelativeLayout>