<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.PersonalDataActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:text="我的资料"
        android:textColor="#666666"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:layout_width="@dimen/dp_321"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/list_background"
        android:orientation="vertical"
        android:padding="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的头像"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_person_pic"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@mipmap/mine_pic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的昵称"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="我是狂吃不胖的小姐姐"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="我的密码"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/et_person_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="123"
                android:textColor="#999999"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_marginTop="300dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_person_save_personal_data"
        android:layout_width="@dimen/dp_116"
        android:layout_height="@dimen/dp_30"
        android:background="#ff5e70"
        android:text="保存"
        android:textColor="#fff"
        android:textSize="@dimen/sp_14" />
</LinearLayout>