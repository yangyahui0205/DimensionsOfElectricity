<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_321"
    android:layout_height="@dimen/dp_118"
    android:padding="@dimen/dp_10"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/homepage_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_style_pic"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_98"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_style_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text="荣耀小米小米小米sss小米f废粉盒是否记录xxxxxxxxxxxxxxwrgreg小米"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_style_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="￥1199.00"
            android:textColor="#ff0000"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
